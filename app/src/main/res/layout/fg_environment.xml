<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="260dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                app:cardBackgroundColor="#fff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#3CB371"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tv_env_title"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:text="大气环境实时监测让你随时掌握天气变化"
                            android:textSize="20sp"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/air_quality" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="30dp"
                app:cardBackgroundColor="#fff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/icon_tem"
                        android:layout_marginLeft="30dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="温度"
                        android:textSize="22sp"
                        android:layout_marginLeft="30dp"/>
                    <TextView
                        android:id="@+id/tv_env_tem"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="26"
                        android:textSize="20sp"
                        android:layout_marginLeft="60dp"
                        android:background="@drawable/bg_circle"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="30dp"
                app:cardBackgroundColor="#fff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/icon_hum"
                        android:layout_marginLeft="30dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="湿度"
                        android:textSize="22sp"
                        android:layout_marginLeft="30dp"/>
                    <TextView
                        android:id="@+id/tv_env_hum"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="26"
                        android:textSize="20sp"
                        android:layout_marginLeft="60dp"
                        android:background="@drawable/bg_circle"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="30dp"
                app:cardBackgroundColor="#fff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/icon_light"
                        android:layout_marginLeft="30dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="光照"
                        android:textSize="22sp"
                        android:layout_marginLeft="30dp"/>
                    <TextView
                        android:id="@+id/tv_env_light"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="26"
                        android:textSize="20sp"
                        android:layout_marginLeft="60dp"
                        android:background="@drawable/bg_circle"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="30dp"
                app:cardBackgroundColor="#fff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/icon_pm"
                        android:layout_marginLeft="30dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PM2.5"
                        android:textSize="22sp"
                        android:layout_marginLeft="30dp"/>
                    <TextView
                        android:id="@+id/tv_env_pm"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="26"
                        android:textSize="20sp"
                        android:layout_marginLeft="43dp"
                        android:background="@drawable/bg_circle"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="30dp"
                app:cardBackgroundColor="#fff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/icon_co2"
                        android:layout_marginLeft="30dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CO2"
                        android:textSize="22sp"
                        android:layout_marginLeft="30dp"/>
                    <TextView
                        android:id="@+id/tv_env_co2"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="26"
                        android:textSize="20sp"
                        android:layout_marginLeft="65dp"
                        android:background="@drawable/bg_circle"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <Button
                android:id="@+id/btn_env_threshold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="阈值设置"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_background"/>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>