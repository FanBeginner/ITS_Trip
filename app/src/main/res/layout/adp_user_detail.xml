<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车辆："
                    android:textSize="18dp"
                    android:layout_marginVertical="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地点："
                    android:textSize="18dp"
                    android:layout_marginVertical="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原因："
                    android:textSize="18dp"
                    android:layout_marginVertical="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扣分："
                    android:textSize="18dp"
                    android:layout_marginVertical="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="罚款(元)："
                    android:textSize="18dp"
                    android:layout_marginVertical="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间："
                    android:textSize="18dp"
                    android:layout_marginVertical="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="状态："
                    android:textSize="18dp"
                    android:layout_marginVertical="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/im_carLogo"
                        android:layout_width="28dp"
                        android:layout_height="26dp"
                        android:layout_marginVertical="5dp"
                        android:src="@drawable/baoma" />
                    <TextView
                        android:id="@+id/tv_detail_carId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="aa"
                        android:textSize="18dp"
                        android:layout_marginVertical="5dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_detail_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无"
                    android:textSize="18dp"
                    android:layout_marginVertical="5dp"/>
                <TextView
                    android:id="@+id/tv_detail_cause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无"
                    android:textSize="18dp"
                    android:layout_marginVertical="5dp"/>
                <TextView
                    android:id="@+id/tv_detail_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="18dp"
                    android:layout_marginVertical="5dp"/>
                <TextView
                    android:id="@+id/tv_detail_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="18dp"
                    android:layout_marginVertical="5dp"/>
                <TextView
                    android:id="@+id/tv_detail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无"
                    android:textSize="18dp"
                    android:layout_marginVertical="5dp"/>
                <TextView
                    android:id="@+id/tv_detail_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无"
                    android:textSize="18dp"
                    android:layout_marginVertical="5dp"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>