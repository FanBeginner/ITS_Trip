<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.example.fan.its_trip.view.ZoomScrollView
        android:id="@+id/scrollView_nearbysort"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:zoomId="@+id/iv_zoom"
        app:maxZoom="150dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:minHeight="1000dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/iv_zoom"
                android:scaleType="centerCrop"
                android:src="@drawable/im_top"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rc_nearbySort"
                android:layout_width="match_parent"
                android:layout_height="800dp"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </com.example.fan.its_trip.view.ZoomScrollView>
</LinearLayout>