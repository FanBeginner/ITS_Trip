<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="序号"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="@drawable/bg_frame"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="车号"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="@drawable/bg_frame"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="充值金额(元)"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_weight="0.8"
            android:background="@drawable/bg_frame"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="操作人"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_weight="0.9"
            android:background="@drawable/bg_frame"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="充值时间"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_weight="0.8"
            android:background="@drawable/bg_frame"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/adp_record_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="a"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_weight="1"
            android:background="@drawable/bg_frame"/>
        <TextView
            android:id="@+id/adp_record_carId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="a"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_weight="1"
            android:background="@drawable/bg_frame"/>
        <TextView
            android:id="@+id/adp_record_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="a"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_weight="0.8"
            android:background="@drawable/bg_frame"/>
        <TextView
            android:id="@+id/adp_record_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="a"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_weight="0.9"
            android:background="@drawable/bg_frame"/>
        <TextView
            android:id="@+id/adp_record_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="a"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_weight="0.8"
            android:background="@drawable/bg_frame"/>
    </LinearLayout>
</LinearLayout>